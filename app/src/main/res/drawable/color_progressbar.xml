<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置背景色（白色） -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="#ffedeff2"
                android:startColor="#ffedeff2" />
        </shape>
        <!--渐变模式angle必须为45的倍数 android:centerY是中间颜色的位置 自己0-1之间-->
    </item>

    <!-- 设置进度条颜色（蓝色） -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="180"
                    android:centerY="0.5"
                    android:endColor="#58D7FF"
                    android:startColor="#2D90FF" />
            </shape>
        </clip>
        <!--<clip>是裁剪图片属性 用作进度条最合适  比如只显示图片的 22% 这样用这个属性-->
    </item>

</layer-list>