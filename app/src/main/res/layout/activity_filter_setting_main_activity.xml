<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filter_setting_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="org.fanhuang.cihangbrowser.activity.filtersetting.FilterSettingMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <LinearLayout
            android:id="@+id/key_word_filter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关键字过滤"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/key_word_question"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/question"
                android:layout_marginRight="5dp"
                android:focusable="false" />

            <ImageView
                android:id="@+id/key_word_filter_select_icon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_setup_switch_on"
                android:focusable="false" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/strict_key_word_filter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="使用严格关键字"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/strict_key_word_question"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/question"
                android:layout_marginRight="5dp"
                android:focusable="false" />

            <ImageView
                android:id="@+id/strict_key_word_filter_select_icon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_setup_switch_on"
                android:focusable="false" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/content_filter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="强力过滤网站内容"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/content_filter_question"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/question"
                android:layout_marginRight="5dp"
                android:focusable="false" />

            <ImageView
                android:id="@+id/content_filter_question_select_icon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_setup_switch_on"
                android:focusable="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/key_word_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:drawableRight="@mipmap/ic_set_more"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp"
            android:text="自定义关键字列表"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#F5F5F5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />
        <LinearLayout
            android:id="@+id/filter_outside_ip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="屏蔽国外链接"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/filter_outside_ip_question"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/question"
                android:layout_marginRight="5dp"
                android:focusable="false" />
            <ImageView
                android:id="@+id/filter_outside_ip_icon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_setup_switch_on"
                android:focusable="false" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/filter_mode_select"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="网站过滤"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/filter_mode_question"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/question"
                android:layout_marginRight="5dp"
                android:focusable="false" />

            <ImageView
                android:id="@+id/filter_mode_select_icon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_setup_switch_on"
                android:focusable="false" />
        </LinearLayout>


        <TextView
            android:id="@+id/blacklist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:drawableRight="@mipmap/ic_set_more"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp"
            android:text="自定义黑名单列表"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/whitelist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:drawableRight="@mipmap/ic_set_more"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp"
            android:text="自定义白名单列表"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过滤:"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/num"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#F5F5F5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />
        <LinearLayout
            android:id="@+id/noImg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="无图模式"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/noImgIcon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_setup_switch_on"
                android:focusable="false" />
        </LinearLayout>
        <TextView
            android:id="@+id/noimgwhitelist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:drawableRight="@mipmap/ic_set_more"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp"
            android:text="无图白名单列表"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#F5F5F5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

        <LinearLayout
            android:id="@+id/guanggao_mode_select"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="广告过滤"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/guanggao_select_icon"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_setup_switch_on"
                android:focusable="false" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/advertisinglist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:drawableRight="@mipmap/ic_set_more"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp"
            android:text="自定义广告过滤列表"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_selecter_new"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过滤广告:"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/adv_num"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
